<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Comment Page"
        android:textSize="24sp" />

    <Button
        android:id="@+id/send_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edittext_comment"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="58dp"
        android:background="#3326c6c6"
        android:text="Submit" />

    <EditText
        android:id="@+id/edittext_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/comment_text"
        android:ems="10"
        android:hint="Enter the comment"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/doctoricon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/imageView6"
            app:srcCompat="@drawable/sports_trainer" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/linearLayout10"
        app:srcCompat="@drawable/dieticianicon" />


</RelativeLayout>
