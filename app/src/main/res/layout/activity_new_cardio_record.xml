<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="Sports Page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Cardio"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:layout_weight="1"
            android:text="Cardio" />
        <Button
            android:id="@+id/BodyWork"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:text="BodyBuilding" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LabelForTypeExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:text="Exercise Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/InputBodyWorkExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:hint="Enter Exercise Name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords|text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelForNumberOfExerciseInSets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="36dp"
                    android:text="Number Of Exercise In Sets"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/InputNumberOfExerciseInSetsForBodyWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:hint="Enter Number Of Exercise In Sets"
                    android:imeOptions="actionNext"
                    android:inputType="number" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelForWeigt"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="36dp"
                    android:text="Enter Weight"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Enter Weight"
                    android:id="@+id/InputWeightForBodyWork"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:imeOptions="actionNext"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
