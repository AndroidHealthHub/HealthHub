<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="halmob.healthhub.MainAcitivity">

    <Button
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow" />
    <Button
        android:id="@+id/step_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Counter"/>
    <Button
        android:id="@+id/track_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Tracking"/>

    <Button
        android:id="@+id/diabetes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes Page" />

    <Button
        android:id="@+id/sportsPage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPORTS PAGE" />

    <Button
        android:id="@+id/heart_rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hearth Rate Monitor" />

    <Button
        android:id="@+id/medical_analysis_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Analysis Page" />

    <Button
        android:id="@+id/user_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER SEARCH" />

    <Button
        android:id="@+id/profilePage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE PAGE" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT" />

    <Button
        android:id="@+id/sample_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE READ" />

    <Button
        android:id="@+id/camera_demo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMERA DEMO" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report" />



</LinearLayout>
