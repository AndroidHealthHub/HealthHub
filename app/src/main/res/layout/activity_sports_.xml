<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sportRecord_Button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="sportRecords"
        android:text="Your Sport Records"
        />

    <Button
        android:id ="@+id/addSportRecord"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sportRecord_Button"
        android:background="@android:color/holo_orange_light"
        android:onClick="addSportRecord"
        android:text="Add Sport Record"
        />

    <Button
        android:id ="@+id/createSportProgram"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sportRecord_Button"
        android:background="@android:color/holo_red_dark"
        android:onClick="createSportProgram"
        android:text="Create Sport Program"
        />

    <Button
        android:id ="@+id/showSportProgram"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/createSportProgram"
        android:background="@android:color/holo_green_light"
        android:onClick="showSportProgram"
        android:text="Show Sport Program"
        />


</LinearLayout>





